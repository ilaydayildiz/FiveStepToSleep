<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.fivesteptosleep">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".secondPageActivity"
            android:label="@string/title_activity_second_page"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.fivesteptosleep.MainActivity" />
        </activity>
        <activity
            android:name=".thirdPageActivity"
            android:label="@string/title_activity_third_page"
            android:parentActivityName=".secondPageActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.fivesteptosleep.secondPageActivity" />
        </activity>
        <activity
            android:name=".fourthPageActivity"
            android:label="@string/title_activity_fourth_page"
            android:parentActivityName=".thirdPageActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.fivesteptosleep.thirdPageActivity" />
        </activity>
        <activity
            android:name=".fifthPageActivity"
            android:label="@string/title_activity_fifth_page"
            android:parentActivityName=".fourthPageActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.fivesteptosleep.fourthPageActivity" />
        </activity>
        <activity
            android:name=".sixthPageActivity"
            android:label="@string/title_activity_sixth_page"
            android:parentActivityName=".fifthPageActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.fivesteptosleep.fifthPageActivity" />
        </activity>
    </application>

</manifest>
